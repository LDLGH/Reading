<?xml version="1.0" encoding="utf-8"?>
<com.ldl.reading.widget.proanim.ObjectAnimatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.ldl.reading.widget.proanim.ObjectAnimatorView
            android:id="@+id/view_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    <Button
            android:id="@+id/Translation"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:text="Translation"
            android:textAllCaps="false"
            android:textSize="16sp" />
</com.ldl.reading.widget.proanim.ObjectAnimatorLayout>