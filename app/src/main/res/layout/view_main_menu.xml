<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="50dp">
    <TextView
            android:id="@+id/tv_find"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_bookshelf"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/selector_menu_find"
            android:text="@string/find"
            android:gravity="center_horizontal"
            android:drawablePadding="2dp"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/selector_menu_text"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_bookshelf"
            android:layout_width="0dp"
            android:drawablePadding="2dp"
            app:layout_constraintLeft_toRightOf="@id/tv_find"
            app:layout_constraintRight_toLeftOf="@id/tv_story"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/selector_menu_bookshelf"
            android:text="@string/bookshelf"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/selector_menu_text"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_story"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@id/tv_bookshelf"
            app:layout_constraintRight_toRightOf="@id/tv_mine"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/selector_menu_story"
            android:text="@string/story"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/selector_menu_text"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_mine"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@id/tv_story"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/selector_menu_mine"
            android:text="@string/mine"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/selector_menu_text"
            android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="@color/colorStroke"
          app:layout_constraintTop_toTopOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>