<?xml version="1.0" encoding="utf-8"?>
<com.ldl.reading.widget.objectanim.KeyframeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.ldl.reading.widget.objectanim.KeyframeView
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Keyframe"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

</com.ldl.reading.widget.objectanim.KeyframeLayout>